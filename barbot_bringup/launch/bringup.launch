<?xml version="1.0"?>

<launch>
  <!-- start Webots -->
  <arg name="no_gui" default="false," doc="Start Webots with minimal GUI"/>
  <include file="$(find barbot_webots)/launch/webots.launch">
    <arg name="mode" value="realtime"/>
    <arg name="no_gui" value="$(arg no_gui)"/>
    <arg name="world" value="$(find barbot_webots)/worlds/barbot.wbt"/>
  </include>
  
  <param name="/use_sim_time" value="true"/>
  <arg name="auto_close" default="false" doc="Startup mode"/>
  <env name="LD_LIBRARY_PATH" value="$(env LD_LIBRARY_PATH):$(env WEBOTS_HOME)/lib/controller"/>
  <env name="PYTHONPATH" value="$(env PYTHONPATH):$(env WEBOTS_HOME)/lib/controller/python"/>

  <!-- Publish robot_state from URDF -->
  <param name="robot_description" command="$(find xacro)/xacro '$(find barbot_description)/urdf/barbot.urdf'" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>

  <node name="imu_data_handler" pkg="barbot_bringup" type="imu_data_handler.py" required="$(arg auto_close)"/>
  <node name="barbot_control" pkg="barbot_bringup" type="barbot_control.py" required="$(arg auto_close)"/>


 </launch>